{
  "$schema": "http://json.schemastore.org/template",
  "author": "sbailleul",
  "classifications": [
    "Web",
    "WebAPI"
  ],
  "identity": "Neos.Template",
  "name": "Demo for template generation",
  "shortName": "template-demo",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sources": [
    {
      "exclude": [
        ".git/**/*",
        ".git",
        ".gitmodules",
        "**/bin/**/*",
        "**/obj/**/*",
        ".idea/**/*",
        ".template.config/**/*",
        "*.DotSettings*",
        "common/**/*",
        "README.md"
      ]
    }
  ],
  "preferNameDirectory": true,
  "sourceName": "Neos.Template",
  "symbols": {
    "httpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 5000
      },
      "replaces": "5000"
    },
    "httpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 5001
      },
      "replaces": "5001"
    },
    "entity": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "defaultValue": "Template",
      "replaces": "Template",
      "fileRename": "Template"
    },
    "entityHead": {
      "type": "derived",
      "valueSource": "entity",
      "valueTransform": "lowerCaseFirstLetter"
    },
    "entityTail": {
      "type": "derived",
      "valueSource": "entity",
      "valueTransform": "afterFirstLetter"
    },
    "entityCamelCase": {
      "type": "generated",
      "generator": "join",
      "replaces": "template",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "entityHead"
          },
          {
            "type": "ref",
            "value": "entityTail"
          }
        ]
      }
    }
  },
  "forms": {
    "lowerCaseFirstLetter": {
      "identifier": "chain",
      "steps": [
        "firstLetter",
        "lowerCase"
      ]
    },
    "firstLetter": {
      "identifier": "replace",
      "pattern": "^(.)(.*)",
      "replacement": "$1"
    },
    "afterFirstLetter": {
      "identifier": "replace",
      "pattern": "^(.)(.*)",
      "replacement": "$2"
    },
    "lowerCase": {
      "identifier": "lowerCase"
    }
  }
}